{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "env": {
    "webextensions": true
  },
  "settings": {
    "node": {
      "tryExtensions": [".tsx"] // append tsx to the list as well
    }
  }
}
